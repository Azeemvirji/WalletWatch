@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="row">
    <div class="widget p-5 col-md-5">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h1>@ViewData["Title"]</h1>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating">
                <ejs-textbox id="Email" ejs-for="Input.Email" placeholder="Email" floatLabelType="Auto"></ejs-textbox>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <ejs-textbox id="password" type="password" ejs-for="Input.Password" placeholder="Password" floatLabelType="Auto"></ejs-textbox>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <ejs-textbox id="confirmPassword" type="password" ejs-for="Input.ConfirmPassword" placeholder="Confirm Password" floatLabelType="Auto"></ejs-textbox>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Submit</button>
                </div>
                <div class="col-md-6">
                    <button id="registerReset" type="reset" class="w-100 btn btn-lg btn-secondary">Clear</button>
                </div>
            </div>
           
        </form>
    </div>
