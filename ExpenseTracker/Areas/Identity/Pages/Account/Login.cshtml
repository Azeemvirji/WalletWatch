@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row">
    <div class="widget p-5 col-md-5">
        <section>
            <form id="account" method="post">
                <h1>@ViewData["Title"]</h1>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <ejs-textbox id="Email" ejs-for="Input.Email" placeholder="Email" floatLabelType="Auto"></ejs-textbox>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <ejs-textbox id="password" type="password" ejs-for="Input.Password" placeholder="Password" floatLabelType="Auto"></ejs-textbox>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Submit</button>
                    </div>
                    <div class="col-md-6">
                        <button id="registerReset" type="reset" class="w-100 btn btn-lg btn-secondary">Clear</button>
                    </div>
                </div>
                <div class="mt-3">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
@*                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>*@
                </div>
            </form>
        </section>
    </div>
