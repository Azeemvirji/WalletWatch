@model EditRoleViewModel

@{
    ViewBag.Title = "Edit Role";
}

<h1>@ViewBag.Title</h1>

<div class="col-md-4">
    <form method="post" class="mt-3">
        <div class="form-group row mb-3">
            <div>
                <ejs-textbox id="roleName" placeholder="Role Name" ejs-for="RoleName"
                             floatLabelType="Auto"></ejs-textbox>
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-3">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-success">Update</button>
                <a asp-action="Roles" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    </form>
</div>

<ejs-grid id="roles" dataSource="@Model.Users" gridLines="None" allowSorting="true" allowPaging="true">
    <e-grid-columns>
        <e-grid-column headerText="Email" field="Email"></e-grid-column>
    </e-grid-columns>
</ejs-grid>
